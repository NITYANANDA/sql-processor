SURROUND_QUERY_LIKE_PARTIAL(BOPT)=false;
SURROUND_QUERY_LIKE_FULL(BOPT)=true;

ITEMS(QRY,ident=itemForm,col=item)=
  select @itemid, @productid, @name, @description, @imageurl, @imagethumburl,
         @image, @imagethumb, @price
  from item it
  {= where
   {& it.itemid=:itemid}
   {& UPPER(it.name) like :+name}
   {& UPPER(it.description) like :+description}
   {& it.price >= :priceFrom}
   {& it.price <= :priceTo}
  }
  {#1 order by name}
  {#2 order by price}
;
