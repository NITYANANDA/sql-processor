  }
  {= where
    {& %MEDIA_ID = :id^^notnull }
  }
;

DELETE_NEW_BOOK(CRUD,identx=NewBook,colx=NewBook,dbcol=book)=
  delete from %%BOOK
  {= where
    {& %MEDIA_ID = :id^^notnull }
