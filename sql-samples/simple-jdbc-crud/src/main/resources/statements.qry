  update %%SUBSCRIBER
  {= set
    { ,%LIBRARY = :library.id^^call=isDef }
    { ,%CONTACT = :contact.id^^call=isDef }
    { ,%NAME = :name^^call=isDef }
  }
  {= where
    {& %ID = :id^^notnull }
  }
;

